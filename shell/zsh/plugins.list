# Oh My Zsh compatibility layer
getantidote/use-omz

# ============================================================
# CORE ESSENTIALS (must-have for every zsh setup)
# ============================================================
zsh-users/zsh-autosuggestions           # Fish-like suggestions as you type
zsh-users/zsh-completions               # Additional completions for common tools
zsh-users/zsh-history-substring-search  # Type partial command, arrow up to search
zdharma-continuum/fast-syntax-highlighting  # Faster, better syntax highlighting

# ============================================================
# PRODUCTIVITY
# ============================================================
rupa/z                                  # Jump to frequently used directories
Aloxaf/fzf-tab                          # Replace completion menu with fzf
djui/alias-tips                         # Reminds you of aliases when typing full command
MichaelAquilina/zsh-you-should-use      # Suggests aliases for commands you type

# ============================================================
# OH MY ZSH PLUGINS (via Antidote)
# ============================================================

# Quick commands
ohmyzsh/ohmyzsh path:plugins/sudo       # Double-tap ESC to add sudo
ohmyzsh/ohmyzsh path:plugins/extract    # Universal archive extractor
ohmyzsh/ohmyzsh path:plugins/copypath   # Copy current directory path
ohmyzsh/ohmyzsh path:plugins/copyfile   # Copy file contents to clipboard
ohmyzsh/ohmyzsh path:plugins/web-search # Search from terminal (google, ddg, etc)

# Git
ohmyzsh/ohmyzsh path:plugins/git        # Comprehensive git aliases
ohmyzsh/ohmyzsh path:plugins/gitignore  # Generate .gitignore files

# DevOps
ohmyzsh/ohmyzsh path:plugins/docker
ohmyzsh/ohmyzsh path:plugins/docker-compose
ohmyzsh/ohmyzsh path:plugins/kubectl
ohmyzsh/ohmyzsh path:plugins/helm
ohmyzsh/ohmyzsh path:plugins/terraform
ohmyzsh/ohmyzsh path:plugins/aws
ohmyzsh/ohmyzsh path:plugins/gcloud

# macOS
ohmyzsh/ohmyzsh path:plugins/macos      # macOS-specific commands (ofd, cdf, etc)
